{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<h1>Users</h1>
<table class="table">
<thead>
<tr>
    <th>Name</th>
    <th>Email</th>
    <th>Date of Birth</th>
    <th>Education</th>
    <th>Occupation</th>
    {# and so on ... #}
</tr>
</thead>
    {% for user in users %}
        <tr>
            <td>{{ user.firstName }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.dob|date('Y-m-d') }}</td>
            <td>{{ user.education }}</td>
            <td>{{ user.occupation }}</td>
            
            {# and so on ... #}
        </tr>
    {% endfor %}
</table>

{% endblock %}
